    private void loginButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_loginButtonActionPerformed
        try{

            Class.forName("org.apache.derby.jdbc.ClientDriver");
            try (Connection conn = DriverManager.getConnection("jdbc:derby://localhost:1527/Staff Management","penilop","sunday1985")) {
                String query= "SELECT * FROM Employee WHERE username=? and password=?";
                PreparedStatement pstmt = conn.prepareStatement(query);
                pstmt.setString(1,usernameTextField.getText());
                char [] passwordConvert = passwordTextField.getPassword();
                String password = new String(passwordConvert);
                pstmt.setString(2,password);

                ResultSet rs;
                rs = pstmt.executeQuery();

                if(rs.next()){

                    EmployeeView menu = new EmployeeView();
                    menu.setVisible(true);
                    closeWindow();
                    pstmt.close();
                }

                else{
                    errorMessage();
                }
            }

        }catch(SQLException e){}
        catch(ClassNotFoundException e){}

    }//GEN-LAST:event_loginButtonActionPerformed

